{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "tsBuildInfoFile": "dist/tsconfig.app.tsbuildinfo",
    "jsx": "react-jsx",
    "lib": ["dom"],
    "types": [
      "node",
      "@nx/react/typings/cssmodule.d.ts",
      "@nx/react/typings/image.d.ts",
      "vite/client"
    ],
    "rootDir": "src"
  },
  "exclude": [
    "out-tsc",
    "dist",
    "sodnix/apps/server/src/**/*.spec.ts",
    "sodnix/apps/server/src/**/*.test.ts",
    "sodnix/apps/server/src/**/*.spec.tsx",
    "sodnix/apps/server/src/**/*.test.tsx",
    "sodnix/apps/server/src/**/*.spec.js",
    "sodnix/apps/server/src/**/*.test.js",
    "sodnix/apps/server/src/**/*.spec.jsx",
    "sodnix/apps/server/src/**/*.test.jsx",
    "eslint.config.js",
    "eslint.config.cjs",
    "eslint.config.mjs"
  ],
  "include": ["sodnix/apps/server/src/**/*.js", "sodnix/apps/server/src/**/*.jsx", "sodnix/apps/server/src/**/*.ts", "sodnix/apps/server/src/**/*.tsx"]
}
